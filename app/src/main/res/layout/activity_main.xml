<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/black"
    >

    <TextView
        android:id="@+id/tvScannerInfo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text=" "
        android:visibility="gone"></TextView>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <CheckBox
            android:id="@+id/cbFrame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:checked="true"
            android:text="Frame"></CheckBox>

        <CheckBox
            android:id="@+id/cbLFD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="LFD"></CheckBox>

        <CheckBox
            android:id="@+id/cbInvertImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Invert"></CheckBox>

        <CheckBox
            android:id="@+id/cbNFIQ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Nfiq"></CheckBox>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <Button
            android:id="@+id/btnScan"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text=" Scan " />

        <Button
            android:id="@+id/btnStop"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:enabled="false"
            android:text=" Stop " />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:enabled="false"
            android:text=" Save " />

        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Update" />

        <ProgressBar
            android:id="@+id/pbLoad"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageFinger"
            android:layout_width="238dp"
            android:layout_height="304dp"
            android:layout_above="@+id/tvName"
            android:layout_alignParentStart="true"
            android:layout_marginStart="80dp"
            android:layout_marginBottom="3dp"
            android:contentDescription="Finger Image" />

        <CheckBox
            android:id="@+id/cbUsbHostMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:checked="true"
            android:text="USB Host Mode"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvTB"
            android:layout_width="383dp"
            android:layout_height="132dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="14dp"
            android:layout_marginBottom="149dp"
            android:background="@drawable/border"
            android:paddingTop="15dp"
            android:text="Vui Lòng Quét Vân Tay"
            android:textAlignment="center"
            android:textColor="#431010"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:text=" "
            android:visibility="gone"
            tools:visibility="gone"></TextView>

        <TextView
            android:id="@+id/tvName"
            android:layout_width="207dp"
            android:layout_height="74dp"
            android:layout_above="@+id/tvTB"
            android:layout_alignParentStart="true"
            android:layout_marginStart="97dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/border"
            android:paddingTop="22dp"
            android:textAlignment="center"
            android:textColor="#501C1C"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="340dp"
            android:layout_height="417dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="569dp"
            android:layout_marginBottom="258dp"
            app:srcCompat="@drawable/pixlr_bg_result" />

        <TextView
            android:id="@+id/tvNameFP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:visibility="gone"
            tools:visibility="gone" />

        <TextView
            android:id="@+id/tvIDE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="526dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="0dp"
            app:srcCompat="@drawable/lichtrucnhat" />

        <ImageView
            android:id="@+id/imgWS"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:visibility="visible"
            app:srcCompat="@drawable/logocolor1"
            tools:visibility="gone" />

    </RelativeLayout>
</LinearLayout>
